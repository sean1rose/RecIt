html
  head
    title List
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  body
    include partials/header

    div(class='container')
      header(class='jumbotron')
        div(class='container')
            h1 List of Artists
            p
              a(href='/list/new' class='btn btn-primary btn-lg') Add new list
      
      div(class='row' style='display: flex; flex-wrap: wrap;')
        for item in list
          div(class='col-md-3 col-sm-6')
            div(class='thumbnail')
              img(src=item.image)
              div(class='caption')
                h4 #{item.number}) #{item.artist} - #{item.song}
      
      include partials/footer